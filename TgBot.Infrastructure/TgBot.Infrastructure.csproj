<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>0.0.1</Version>
        <Title>TgBot.Infrastructure</Title>
        <Authors>IVE</Authors>
        <Description>Infrastructure implementation for easy creating tg bots on C#.</Description>
        <PackageProjectUrl>https://github.com/bkmz1840/TgBot.Infrastructure</PackageProjectUrl>
        <RepositoryUrl>https://github.com/bkmz1840/TgBot.Infrastructure</RepositoryUrl>
        <PackageTags>TG bot TgBot infra infrastructure</PackageTags>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
      <PackageReference Include="Telegram.Bot" Version="19.0.0" />
    </ItemGroup>

</Project>
